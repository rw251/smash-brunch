.container-small.container
  .btn-toolbar
    a.btn.btn-info(href='/users') Back to user list
  form(action='/users/add', method='post')
    .form-group.input-group
      span.input-group-addon
        i.fa.fa-user
      input.form-control(type='text', name='name', placeholder='Full name', required='', autofocus='')
    .form-group.input-group
      span.input-group-addon
        i.fa.fa-envelope
      input.form-control(type='text', name='email', placeholder='Email address', required='', autofocus='')
    .form-group.input-group
      span.input-group-addon
        i.fa.fa-key
      input.form-control(type='password', name='password', placeholder='Password', required='', autofocus='')
    .form-group
      label(for='practices') Practice(s):
      select.form-control.selectpicker(name='practices',data-live-search="true",multiple='',title='Select one or more GP practices')
        each practice in practices
          option(value=practice._id)= practice.short_name
    .form-group
      .checkbox
        label
          input(name='isAdmin', type='checkbox')
          | Is Admin
    .form-group
      .checkbox
        label
          input(name='isCCG', type='checkbox')
          | Is CCG user
    button.btn.btn-purple.btn-block.history(type='submit')
      | Create 
      span.fa.fa-arrow-circle-right
    - if (flash && flash.shift)
      while message = flash.shift()
        div.alert(class='alert-' + message.type,role="alert")= message.message
